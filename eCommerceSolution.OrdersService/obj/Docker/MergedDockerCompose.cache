      ASPNETCORE_ENVIRONMENT: Development
      ASPNETCORE_HTTP_PORTS: "8080"
      ASPNETCORE_HTTPS_PORTS: "8081"
      MONGODB_DATABASE: OrdersDatabase
      MONGODB_HOST: mongodb-container
      MONGODB_PORT: "27017"
      ProductsMicroserviceName: producs-microservice
      ProductsMicroservicePort: "8080"
      UsersMicroserviceName: users-microservice
      UsersMicroservicePort: "9090"
    image: ordersmicroserviceapi
    networks:
      ecommerce-network: null
      orders-mongodb-network: null
    ports:
      - mode: ingress
        target: 8080
        published: "7000"
        protocol: tcp
      - mode: ingress
        target: 8080
        protocol: tcp
      - mode: ingress
        target: 8081
        protocol: tcp
    volumes:
      - type: bind
        source: C:\Users\tomin\AppData\Roaming/Microsoft/UserSecrets
        target: /home/app/.microsoft/usersecrets
        read_only: true
        bind:
          create_host_path: true
      - type: bind
        source: C:\Users\tomin\AppData\Roaming/Microsoft/UserSecrets
        target: /root/.microsoft/usersecrets
        read_only: true
        bind:
          create_host_path: true
      - type: bind
        source: C:\Users\tomin\AppData\Roaming/ASP.NET/Https
        target: /home/app/.aspnet/https
        read_only: true
        bind:
          create_host_path: true
      - type: bind
        source: C:\Users\tomin\AppData\Roaming/ASP.NET/Https
        target: /root/.aspnet/https
        read_only: true
        bind:
          create_host_path: true
  postgres-container:
