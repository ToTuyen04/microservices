      POSTGRES_DB: eCommerceUsers
      POSTGRES_PASSWORD: admin
      POSTGRES_USER: postgres
    image: postgres:latest
    networks:
      users-postgres-network: null
    ports:
      - mode: ingress
        target: 5432
        published: "5433"
        protocol: tcp
    volumes:
      - type: bind
        source: C:\Users\tomin\Desktop\microservices\postgres-init
        target: /docker-entrypoint-initdb.d
        bind:
          create_host_path: true
  producs-microservice:
    depends_on:
      mysql-container:
        condition: service_started
        required: true
    environment:
      ASPNETCORE_ENVIRONMENT: Development
      ASPNETCORE_HTTP_PORTS: "8080"
      MYSQL_DATABASE: eCommerceProductServiceDB
      MYSQL_HOST: mysql-container
      MYSQL_PASSWORD: admin
      MYSQL_PORT: "3306"
      MYSQL_USER: root
