name: dockercompose8996563106383438558
services:
  mongodb-container:
    image: mongo:latest
    networks:
      orders-mongodb-network: null
    ports:
      - mode: ingress
        target: 27017
        published: "27017"
        protocol: tcp
    volumes:
      - type: bind
        source: C:\Users\tomin\Desktop\microservices\mongodb-init
        target: /docker-entrypoint-initdb.d
        bind:
          create_host_path: true
  mysql-container:
    environment:
      MYSQL_ROOT_PASSWORD: admin
    image: mysql:latest
    networks:
      products-mysql-network: null
    ports:
      - mode: ingress
        target: 3306
        published: "3307"
        protocol: tcp
    volumes:
      - type: bind
        source: C:\Users\tomin\Desktop\microservices\mysql-init
        target: /docker-entrypoint-initdb.d
        bind:
          create_host_path: true
  ordersmicroservice.api:
    build:
      context: C:\Users\tomin\Desktop\microservices\eCommerceSolution.OrdersService
      dockerfile: OrdersMicroservice.API/Dockerfile
